<Window x:Class="TFG.AddTeamWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TFG"
        mc:Ignorable="d"
        Title="AddTeamWindow" Height="450" Width="800">
    <Grid Background="#F2F2F2">
        <!-- Aquí puedes diseñar el formulario para agregar un nuevo equipo -->
        <StackPanel Margin="20">
            <Label Content="Nombre:" Foreground="#333333" FontSize="14" />
            <TextBox x:Name="teamNameTextBox" Height="30" />

            <Label Content="Email:" Foreground="#333333" FontSize="14" Margin="0 10 0 0" />
            <TextBox x:Name="teamEmailTextBox" Height="30" />

            <Button Content="Guardar" Click="SaveButton_Click" Background="#4CAF50" Foreground="White" FontSize="14" Height="40" Margin="0 20 0 0" />
        </StackPanel>
    </Grid>
</Window>
